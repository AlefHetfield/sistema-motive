// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // native: para seu ambiente local (Windows)
  // rhel-openssl-3.0.x: para o ambiente Linux do Vercel
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  output   = "../api/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =================================
// MODELOS DA APLICAÇÃO
// =================================

model Client {
  id                      Int       @id @default(autoincrement())
  nome                    String?
  cpf                     String?
  areaInteresse           String?
  corretor                String?
  responsavel             String?
  observacoes             String?
  agencia                 String?
  modalidade              String?
  status                  String?
  createdAt               DateTime  @default(now()) @map("createdAt")
  ultimaAtualizacao       DateTime? @updatedAt @map("ultimaAtualizacao")
  dataAssinaturaContrato  DateTime? @db.Date

  @@map("clients")
}

model User {
  id        Int      @id @default(autoincrement())
  nome      String?
  email     String?  @unique
  role      String?
  createdAt DateTime @default(now()) @map("createdAt")

  @@map("users")
}

model Property {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  address     String
  price       Float?
  area        Float?
  photoUrl    String?
  // Campos para geolocalização
  latitude    Float?
  longitude   Float?

  @@map("properties")
}
