generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id                     Int       @id @default(autoincrement())
  nome                   String?
  cpf                    String?
  imovel                 String?
  corretor               String?
  responsavel            String?
  observacoes            String?
  agencia                String?
  modalidade             String?
  status                 String?
  createdAt              DateTime  @default(now()) @map("createdAt")
  ultimaAtualizacao      DateTime? @updatedAt @map("ultimaAtualizacao")
  dataAssinaturaContrato DateTime? @db.Date
  ultimoUsuarioAlteracao String?

  @@map("clients")
}

enum Role {
  ADM
  CORRETOR
}

model User {
  id                 Int       @id @default(autoincrement())
  nome               String
  email              String    @unique
  passwordHash       String
  role               Role      @default(CORRETOR)
  isActive           Boolean   @default(true)
  mustChangePassword Boolean   @default(false)
  lastLogin          DateTime?
  createdAt          DateTime  @default(now()) @map("createdAt")

  @@map("users")
}

model ActivityLog {
  id            Int      @id @default(autoincrement())
  clientId      Int
  clientNome    String
  action        String   // "created", "updated", "status_changed", "deleted"
  statusAntes   String?
  statusDepois  String?
  userName      String
  createdAt     DateTime @default(now())

  @@map("activity_logs")
  @@index([createdAt(sort: Desc)])
}

model Property {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  address     String
  price       Float?
  area        Float?
  photoUrl    String?
  latitude    Float?
  longitude   Float?

  @@map("properties")
}
